---
interface Props {
    name: string;
    url: string;
    isBig?: boolean;
}
const { name, url, isBig } = Astro.props;

const id = url.split("/").at(-2);
const imgSource = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
    href=`/pokemons/${name}`
    class:list={[
        "rounded flex flex-col justify-center items-center p-2",
        {
            border: !isBig,
        },
    ]}
>
    <img
        src={imgSource}
        alt=`${name} original art`
        class:list={[
            {
                "w-22 h-22": !isBig,
                "w-26 h-26": isBig,
            },
        ]},
        transition:name=`${name}-image`
    />
    <span class:list={["capitalize", { "text-3xl": isBig }]}>#{id} {name}</span>
</a>
